%h2 All questions

= link_to "Ask a question", new_question_path

%ul#questions-index
  - @questions.each do |question|
    %li
      %p
        = link_to question.title, question
      %p.meta
        = pluralize(question.answers.count, 'answer')
        %br/
        Asked by
        = author_link question
        = time_ago_in_words question.created_at
        ago
