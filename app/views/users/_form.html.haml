- form_for @user do |f|
  = f.error_messages

  = f.label :username, "Username"
  = f.text_field :username

  = f.label :email, "Email"
  = f.text_field :email

  = f.label :password, "Password"
  = f.password_field :password

  = f.label :password_confirmation, "Password confirmation"
  = f.password_field :password_confirmation

  = f.submit "Register"
