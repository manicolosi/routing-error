%h2= @user.username

%p= "Member for #{time_ago_in_words(@user.created_at)}"

%h3
  Questions asked
  = "(#{@user.questions.count})"
%ul
  - @user.questions.each do |question|
    %li= link_to question.title, question

%h3
  Questions answered
  = "(#{@user.answers.count})"
%ul
  - @user.answers.each do |answer|
    %li= link_to answer.question.title, answer.question
