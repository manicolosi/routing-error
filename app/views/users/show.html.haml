%h2= @user.username

%p= "Member for #{time_ago_in_words(@user.created_at)}"
%p= "Casted #{@user.vote_ups} up votes and #{@user.vote_downs} down votes"

%h3 Recent activity
= render_recent_activities(@user)

%h3
  All questions asked
  = "(#{@user.questions.count})"
%ul
  - @user.questions.each do |question|
    %li= link_to question.title, question

%h3
  All questions answered
  = "(#{@user.answers.count})"
%ul
  - @user.answers.each do |answer|
    %li= link_to answer.question.title, answer
